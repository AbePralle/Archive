augment CmdMathOp
    method to_cs.String
      which ($symbol)
        case "%":
          return "Bard.mod($,$)" (lhs.to_cs,rhs.to_cs)
        case "^":
          return "($)Math.Pow($,$)" (lhs.type.x_name,lhs.to_cs,rhs.to_cs)
        others:
          return "(" + lhs.to_cs + $symbol + rhs.to_cs + ")"
      endWhich
endAugment

augment CmdBitwiseOp
