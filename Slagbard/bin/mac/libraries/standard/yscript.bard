                local var mesg = scanner.scan_String
                cur_method.add( CmdTraceString(mesg) )
              else
                id = scanner.scan_id
                cur_method.add( CmdTraceProperty(id) )
              endIf
              nextIteration

            case "wait"
              local var seconds = scanner.scan_Real64
              cur_method.add( CmdWait(seconds*60) )
