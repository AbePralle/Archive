              if (scanner.next_is_String)
                local var mesg = scanner.scan_String
                cur_method.add( CmdPrint(mesg+"\n") )
                nextIteration
              endIf

            case "prior"
              id = scanner.scan_id
              cur_method.add( CmdPriorCall(id) )
              nextIteration

