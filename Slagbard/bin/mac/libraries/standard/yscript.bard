          local var id = scanner.scan_id
          cur_method = MethodInfo( id )
          entity.methods.add( cur_method )
          nextIteration
        endIf

        local var pos = scanner.src.cur_pos
        local var id = scanner.scan_id
        if (cur_method is null)
          throw_error( scanner, file.filepath )

        else
          which (id)
